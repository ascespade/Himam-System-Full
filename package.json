{
  "name": "himam-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p ${PORT:-3000}",
    "build": "next build",
    "start": "next start -p ${PORT:-3000}",
    "lint": "next lint",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint:check && npm run check:hygiene",
    "check:hygiene": "bash scripts/check-code-hygiene.sh",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "migration:apply": "node scripts/apply-migration.js",
    "migration:auto": "node scripts/apply-migrations-auto.js",
    "migration:mcp": "node scripts/apply-migrations-mcp.js",
    "migration:cleanup": "bash scripts/cleanup-migrations.sh",
    "migration:manual": "bash scripts/apply-migration-manual.sh",
    "prepare": "node -e \"if(process.env.CI){}else{try{require('husky').install()}catch(e){}}\" || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "tsc-files --noEmit"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.47.10",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.8",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "form-data": "^4.0.1",
    "googleapis": "^144.0.0",
    "isomorphic-dompurify": "^2.34.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.468.0",
    "next": "14.2.33",
    "openai": "^4.68.3",
    "postcss": "^8.4.47",
    "preline": "^2.3.1",
    "react": "^18.3.1",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.0",
    "signature_pad": "^4.1.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.49.1",
    "@types/cookie": "^0.6.0",
    "@types/node": "^22.19.2",
    "@types/react": "^18.3.18",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^18.3.5",
    "@types/signature_pad": "^4.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.33",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pg": "^8.13.1",
    "playwright": "^1.49.1",
    "tsc-files": "^1.1.4",
    "typescript": "^5.7.2"
  }
}
